{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "bun install && bun run build",
    "nixpacksConfig": {
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs_20", "bun"]
        },
        "install": {
          "cmds": ["bun install"]
        },
        "build": {
          "cmds": ["bun run build"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "bun run start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
